{
  "tags": [
    {
      "tag_name": "detection_source",
      "tag_value": "siembol_alerts"
    }
  ],
  "rules_protection": {
    "max_per_hour": 30,
    "max_per_day": 100
  },
  "rules_version": 7,
  "rules": [
    {
      "rule_name": "win_mimikatz",
      "rule_author": "siembol",
      "rule_version": 2,
      "rule_description": "Detect LSASS handling by Mimikatz.",
      "source_type": "win_eventlogs",
      "matchers": [
        {
          "matcher_type": "IS_IN_SET",
          "is_negated": false,
          "field": "EventID",
          "case_insensitive": false,
          "data": "4656"
        },
        {
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "ObjectName",
          "data": "^.*\\\\lsass.exe$"
        },
        {
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "ProcessName",
          "data": "^.*\\\\mimikatz.exe$"
        }
      ],
      "rule_protection": {
        "max_per_hour": 30,
        "max_per_day": 100
      }
    },
    {
      "rule_name": "siembol_heartbeat",
      "rule_author": "siembol",
      "rule_version": 2,
      "source_type": "siembol_heartbeat",
      "matchers": [
        {
          "is_enabled": true,
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "siembol_heartbeat",
          "data": "true"
        }
      ],
      "rule_protection": {
        "max_per_hour": 100,
        "max_per_day": 3000
      }
    },
    {
      "rule_name": "linux_syslog_failed_auth",
      "rule_author": "siembol",
      "rule_version": 3,
      "rule_description": "Alert for failed auth - linux syslog",
      "source_type": "linux_syslog",
      "matchers": [
        {
          "is_enabled": true,
          "description": "contains authentication failure",
          "matcher_type": "CONTAINS",
          "is_negated": false,
          "field": "original_string",
          "case_insensitive": true,
          "starts_with": false,
          "ends_with": false,
          "data": "authentication failure"
        }
      ],
      "rule_protection": {
        "max_per_hour": 30,
        "max_per_day": 100
      }
    },
    {
      "rule_name": "aws_failed_authentication",
      "rule_author": "siembol",
      "rule_version": 1,
      "rule_description": "AWS failed authentication",
      "source_type": "aws_cloudtrail",
      "matchers": [
        {
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "eventName",
          "data": "(?i)ConsoleLogin$"
        },
        {
          "matcher_type": "IS_IN_SET",
          "is_negated": false,
          "field": "errorMessage",
          "case_insensitive": true,
          "data": "Failed authentication"
        }
      ],
      "tags": [
        {
          "tag_name": "correlation_key",
          "tag_value": "${userIdentity_principalId}"
        }
      ]
    },
    {
      "rule_name": "win_eventlogs_failed_logon",
      "rule_author": "siembol",
      "rule_version": 1,
      "rule_description": "Alert for 4625 failed logon - for correlation on user",
      "source_type": "win_eventlogs",
      "matchers": [
        {
          "matcher_type": "IS_IN_SET",
          "is_negated": false,
          "field": "EventID",
          "case_insensitive": false,
          "data": "4625"
        }
      ],
      "tags": [
        {
          "tag_name": "correlation_key",
          "tag_value": "${SubjectUserName}"
        }
      ],
      "rule_protection": {
        "max_per_hour": 30,
        "max_per_day": 100
      }
    }
  ]
}