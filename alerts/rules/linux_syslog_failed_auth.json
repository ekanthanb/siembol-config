{
  "rule_name": "linux_syslog_failed_auth",
  "rule_author": "siembol",
  "rule_version": 3,
  "rule_description": "Alert for failed auth - linux syslog",
  "source_type": "linux_syslog",
  "matchers": [
    {
      "is_enabled": true,
      "description": "contains authentication failure",
      "matcher_type": "CONTAINS",
      "is_negated": false,
      "field": "original_string",
      "case_insensitive": true,
      "starts_with": false,
      "ends_with": false,
      "data": "authentication failure"
    }
  ],
  "rule_protection": {
    "max_per_hour": 30,
    "max_per_day": 100
  }
}