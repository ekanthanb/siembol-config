{
  "rule_name": "username",
  "rule_author": "siembol",
  "rule_version": 10,
  "source_type": "linux.syslogs",
  "matchers": [
    {
      "is_enabled": true,
      "matcher_type": "REGEX_MATCH",
      "is_negated": false,
      "field": "syslog_appname",
      "data": "su"
    }
  ],
  "table_mapping": {
    "table_name": "username",
    "joining_key": "${syslog_appname}",
    "enriching_fields": [
      {
        "table_field_name": "syslog_hostname",
        "event_field_name": "enriched_hostname"
      }
    ]
  }
}