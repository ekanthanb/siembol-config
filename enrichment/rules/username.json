{
  "rule_name": "username",
  "rule_author": "siembol",
  "rule_version": 9,
  "source_type": "linux.syslogs",
  "matchers": [
    {
      "is_enabled": true,
      "matcher_type": "REGEX_MATCH",
      "is_negated": false,
      "field": "source_type",
      "data": "/linux_syslog/gm"
    }
  ],
  "table_mapping": {
    "table_name": "username",
    "joining_key": "${source_type}",
    "enriching_fields": [
      {
        "table_field_name": "source_type",
        "event_field_name": "enriched_source"
      }
    ]
  }
}